		//ArrayList<String> l2 = Arrays.asList("nyc","lon");//Type mismatch: cannot convert from List<String> to ArrayList<String>..so make List on lhs
		List<String> l2 = Arrays.asList("nyc","lon");
		l2.add("abc");
		l2.add("xyz");
		SafeVarArgDemo.myMethod(l1,l2);
	}
	
